<div class="inner-container">
    <h1 class="title">Sign Up</h1>
    <form action="/register" method="POST">
        <div class="input">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Jahara" required>
        </div>
        <div class="input">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="jahara@gmail.com" required>
        </div>
        <div class="input">
            <label for="password">Password</label>
            <input type="text" id="password" name="password" placeholder="Enter a password" required>
        </div>
        <button type="submit" class="btn btn-submit">Register</button>
    </form>
    <a href="/login" class="btn btn-link">Login</a>
</div>
